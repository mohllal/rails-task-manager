<div>
  <h2>Welcome</h2>
  <p>Please login to proceed!</p>

  <%= form_tag(access_path, class: "form-horizontal") do %>
    <div class="form-group mb-2">
      <%= label_tag(:username, nil, class: "col-sm-2 control-label") %>
      <div class="col-sm-10">
        <%= text_field_tag(:username, params[:username], class: "form-control") %>
      </div>
    </div>
    <div class="form-group mb-2">
      <%= label_tag(:password, nil, class: "col-sm-2 control-label") %>
      <div class="col-sm-10">
        <%= password_field_tag(:password, nil, class: "form-control") %>
      </div>
    </div>
    <div class="form-group mb-2">
      <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag("Log In", class: "btn btn-primary") %>
      </div>
    </div>
  <% end %>
</div>