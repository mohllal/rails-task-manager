<% content_for(:title, 'Create Task') %>

<h1>Create Task</h1>

<%= link_to 'Back To Tasks', tasks_path, class: 'btn btn-secondary mb-3' %>

<%= form_for @task, class: 'form' do |f| %>
  <%= render partial: 'form', locals: {f: f} %>

  <div class="form-group mb-2">
    <%= f.submit 'Create Task', class: 'btn btn-success' %>
  </div>
<% end %>