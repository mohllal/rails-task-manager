<h1 class="my-4">Tasks</h1>

<%= link_to 'New Task', new_task_path, class: 'btn btn-success mb-3' %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Task</th>
      <th>Description</th>
      <th>Completed?</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.completed? ? 'Yes' : 'No' %></td>
        <% if task.category %>
          <td><%= link_to task.category.name, category_path(task.category) %></td>
        <% elsif %>
          <td><%= link_to 'Add Category', edit_task_path(task), class: 'btn btn-primary btn-sm' %></td>
        <% end %>
        <td>
          <%= link_to 'Show', task_path(task), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Delete', delete_task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
