<% content_for(:title, 'Edit Category') %>

<h1>Edit Category</h1>

<%= link_to 'Back To Categories', categories_path, class: 'btn btn-secondary mb-3' %>

<%= form_for(@category, class: "form-horizontal") do |f| %>
  <%= render partial: 'form', locals: {f: f} %>

  <div class="form-group mb-2">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Edit Category', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>