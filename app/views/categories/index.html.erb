<h1 class="my-4">Categories</h1>

<%= link_to 'New Category', new_category_path, class: 'btn btn-success mb-3' %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Cateogry</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to 'Show', category_path(category), class: 'btn btn-info btn-sm'  %>
          <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Delete', delete_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
