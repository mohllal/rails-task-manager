<h1 class="my-4">Category Details</h1>

<%= link_to 'Back To Categories', categories_path, class: 'btn btn-secondary mb-3' %>

<div class="mb-3">
  <%= link_to 'Edit', edit_category_path(@category), class: 'btn btn-primary' %>
  <%= link_to 'Delete', delete_category_path(@category), class: 'btn btn-danger' %>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th>Name</th>
    <td><%= @category.name %></td>
  </tr>
  <tr>
    <th>Tasks</th>
    <td>
      <ul>
        <% @category.tasks.limit(3).each do |task| %>
          <li><%= link_to task.name, task_path(task) %></li>
        <% end %>

        <% if @category.tasks.count > 3 %>
          <li>more...</li>
        <% end %>
      </ul>
    </td>
  <tr>
    <th>Created At</th>
    <td><%= @category.created_at %></td>
  </tr>
  <tr>
    <th>Updated At</th>
    <td><%= @category.updated_at %></td>
  </tr>
</table>